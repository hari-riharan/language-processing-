  <script>
    async function checkFakeNews() {
      const newsText = document.getElementById('newsInput').value.trim();
      const resultArea = document.getElementById('resultArea');

      if (!newsText) {
        resultArea.textContent = "‚ö†Ô∏è Please enter some news content.";
        return;
      }

      resultArea.textContent = "‚è≥ Analyzing with NLP...";

      try {
        const response = await fetch("http://localhost:5000/predict", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ text: newsText })
        });

        const data = await response.json();

        if (data.prediction === "FAKE") {
          resultArea.innerHTML = `<span style="color:red;">üö´ FAKE NEWS DETECTED</span>`;
        } else if (data.prediction === "REAL") {
          resultArea.innerHTML = `<span style="color:green;">‚úÖ REAL NEWS</span>`;
        } else {
          resultArea.innerHTML = "‚ùì Could not determine the authenticity.";
        }

      } catch (error) {
        console.error("Error:", error);
        resultArea.textContent = "‚ùå Error connecting to the detection server.";
      }
    }
  </script>

